
{% extends "base.html.twig" %}
{% block body %}
    <div class="row p-5">
        <div class="w-75 text-center">
            <h1 class="text-danger">Choisir vos cadeaux préférés</h1>
            <h2> Cadeaux de Noël<i class="fas fa-air-freshener"></i></h2>
            <hr>
            <p class="font-italic,font-weight-bold, text-danger">
            <span>Noël arrive, le cloch sonne </span>
                <br>
                le sapin vous attend
            </p>
            {% for post in posts %}
                <div class="col-md-4 mt-4">
                    <div class="card shadow-sm">
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" alt="{{ product.name }}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <a href="{{ path('/{category}/{alas}{id}',{
                                'category': product.category.alias,
                                'alias': product.alias,
                                'id': product.id
                            }) }}" class="btn btn-primary">Voir ce cadeau</a>
                        </div><!-- /.card-body-->
                    </div> <!-- /.card-->
                </div><!-- /.col-md-4-->
            {% endfor %}


            <h2>Cadeaux de Marriage <i class="fas fa-glass-cheers"></i></h2>
            <hr>
            <p class="font-italic,font-weight-bold, text-danger">
            Vivre les mariés <br>
                <br> choisir les cadeaux pour eux
            </p>
            <h2>Cadeaux d'Anniversaire <i class="fas fa-birthday-cake"></i></h2>
            <hr>
            <p class="font-italic,font-weight-bold, text-danger">
            Joyeux Anniversaire!
                <br> Bon anniversaire!
            </p>
            <h2>Cadeaux de nouvel an Chinois <i class="fas fa-candy-cane"></i></h2>
            <hr class="text-black-50">
            <p class="font-italic,font-weight-bold, text-danger">
                Bonne année!
                <br> 新年快乐
            </p>
        </div>
    <div class="card border-secondary mb-3 w-25 " style="max-width: 18rem;">
        <div class="card-header">Cadeaux <i class="fas fa-gifts"></i></div>
        <div class="card-body text-secondary">
            <h5 class="card-title">Secondary card title</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        </div>
    </div>
    </div>
{% endblock %}

